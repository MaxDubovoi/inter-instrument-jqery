@import 'nib'

/* VARIABLES */
tdur        = 300ms ease
transition  = all tdur
radius      = 6px
spriteLink  = '../images/sprite.png'

/* FUNCTIONS */

clearfix()
  zoom 1
  &:before,
  &:after
    content ""
    display table
  &:after
    clear both

font-proxima()
  font-family 'proxima_nova', sans-serif

bs-cover( type = cover)
  background-size type
  .no-backgroundsize &
    -ms-behavior url(backgroundsize.min.htc)

overflow-ellipsis(blockWidth)
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
  max-width blockWidth

multiline-overflow(lines-to-show)
  display block
  display -webkit-box
  max-height @line-height*lines-to-show
  -webkit-line-clamp lines-to-show
  -webkit-box-orient vertical
  overflow hidden
  text-overflow ellipsis

icon()
  background-image none !important
  position relative
  &:before
  &:after
    content ' '
    absolute left top
    width 100%
    height 100%
    opacity 1
    transition transition
    .no-opacity &
      display block
  &:after
    background-position 0 bottom
    opacity 0
    .no-opacity &
      display none
  &:hover
    &:before
      opacity 0
      .no-opacity &
        display none
    &:after
      opacity 1
      .no-opacity &
        display block

html
  height 100%
body
  position relative
  font-family MinionPro-Regular,"Times New Roman",Verdana
  font-weight normal
  margin 0
  -webkit-font-smoothing subpixel-antialiased !important
  backface-visibility hidden
  background-color: #ffffff
h1,h2,h3,h4,ul,li
  margin 0
  padding 0
  list-style none

a
  text-decoration none
  &:visited
    color #000
  &:focus
    outline none

p
  margin 0

/* =============================================================================
Global elements
========================================================================== */
.none
  display none !important
.dtable
  display table
.dtcell
  display table-cell
  vertical-align middle
.invisible
  visibility hidden
  opacity 0 !important
.hidden
  visibility hidden !important
.visible
  visibility visible !important
  opacity 1 !important
.clear
  clear both
  height 0
  font-size 0
  line-height 0
  overflow hidden
  display block
.clearfix
  zoom 1
  &:before,
  &:after
    content ""
    display table
  &:after
    clear both
.min-width
  position relative
  margin 0 auto
  width 1280px

/**** ICONS ****/
